@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>




@* ////////////////////////     Lecture 29  ////////////////////////////////*@

<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <from class="d-grid" asp-action="Index" asp-controller="Home" method="post">
                <label asp-for="Name">Enter Name: </label>
                <input asp-for="Name" placeholder="Enter Name" class="from-control" />
                <br/>
                <select asp-for="Gender" class="from-control" asp-items="Html.GetEnumSelectList<Gender>()">
                    <option value="">Select Gender </option>
                </select>
                <br/>
                <input asp-for="Age" placeholder="Enter Age" class="from-control" />
                <br/>
                <input asp-for="Designation" placeholder="Enter Designation" class="from-control" />
                <br/>
                <input asp-for="Salary" placeholder="Enter Salary" class="from-control" />
                <br/>
                <label>
                    Married:
                </label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Married" value="Yes">
                    <label class="form-check-label" for="flexRadioDefault1">
                        Yes
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Married" value="No">
                    <label class="form-check-label" for="flexRadioDefault2">
                        No
                    </label>
                </div>
                <br/>
                <textarea asp-for="Description" class="from-control" placeholder="Enter Description">

                </textarea>
                <br/>
                <input type="submit" value="submit" class="btn btn-outline-primary btn block" >
            </from>
        </div>
    </div>
</div>







